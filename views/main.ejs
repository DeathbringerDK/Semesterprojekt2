            <button id="myBtn">Mine Bookings</button>


            <!-- The Modal -->

            <div id="myModal" class="modal">

                <!-- Modal content -->

                <div class="modal-content">

                    <span class="close">&times;</span>

                    <p>Du har booket nogle datoer din r√∏vbanan</p>

                </div>

            </div>

        </div>
    </div>

    <div class="body section group">
          
        <!-- Kalenderboks-->
        <div id='calendarHolder' class='col span_7_of_12'>
            <iframe src="/html/calendar.html" width="100%" height="100%" frameBorder="0"></iframe>

        </div>
        
        <!--Infobox med admin rettigheder.-->

        <div class='newsbox col span_3_of_12'>

            <button class="createNews" onclick="createNews();">+</button>

            <div class="newsTab">

                <button class="deleteNews">-</button>

                <button class="editNews">...</button>

